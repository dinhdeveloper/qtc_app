<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp20"
                android:gravity="center"
                tools:text="CÔNG TY CỔ PHẦN INFORMATICS QTC"
                android:textColor="@color/black"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_qtc_icon_location"
                    android:drawablePadding="@dimen/dp5"
                    android:gravity="start|center"
                    android:paddingVertical="@dimen/dp5"
                    android:text="Địa chỉ"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingVertical="@dimen/dp5"
                    android:textColor="@color/text_blue"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    tools:text="@string/appbar_scrolling_view_behavior" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginVertical="@dimen/dp5"
                    android:background="@color/text_blue" />
            </LinearLayout>
            <!--end-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_qtc_icon_call"
                    android:drawablePadding="@dimen/dp5"
                    android:gravity="start|center"
                    android:paddingVertical="@dimen/dp5"
                    android:text="Gọi điện"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingVertical="@dimen/dp5"
                    android:textColor="@color/text_blue"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    tools:text="@string/appbar_scrolling_view_behavior" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginVertical="@dimen/dp5"
                    android:background="@color/text_blue" />
            </LinearLayout>
            <!--end-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_qtc_icon_mail"
                    android:drawablePadding="@dimen/dp5"
                    android:gravity="start|center"
                    android:paddingVertical="@dimen/dp5"
                    android:text="Mail"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingVertical="@dimen/dp5"
                    android:textColor="@color/text_blue"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    tools:text="@string/appbar_scrolling_view_behavior" />
            </LinearLayout>
            <!--end-->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp20"
                android:gravity="center"
                tools:text="Kênh mạng xã hội của công ty INFORMATICS QTC"
                android:textColor="@color/black"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btnFacebook"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/dp10"
                android:layout_width="310dp"
                android:layout_height="wrap_content">
                <b.laixuantam.myaarlibrary.widgets.roundview.RoundTextView
                    android:padding="@dimen/dp10"
                    app:rv_cornerRadius="@dimen/dp5"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_qtc_icon_facebook"
                    android:gravity="start|center"
                    android:drawablePadding="10sp"
                    android:text="Liên kết đến Facebook"
                    android:textColor="#3F51B5"
                    android:textSize="@dimen/dp20"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnYoutube"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/dp10"
                android:layout_width="310dp"
                android:layout_height="wrap_content">
                <b.laixuantam.myaarlibrary.widgets.roundview.RoundTextView
                    android:padding="@dimen/dp10"
                    app:rv_cornerRadius="@dimen/dp5"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_qtc_icon_youtube"
                    android:gravity="start|center"
                    android:drawablePadding="10sp"
                    android:text="Liên kết đến youtube"
                    android:textColor="#FF3D00"
                    android:textSize="@dimen/dp20"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>